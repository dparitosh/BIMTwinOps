# Autodesk Platform Services (APS) credentials
# Create an APS app in the APS/Forge developer portal, then copy Client ID/Secret here.
APS_CLIENT_ID="<your-client-id>"
APS_CLIENT_SECRET="<your-client-secret>"

# Optional: comma or space separated scopes
# Common defaults for token + basic data access
APS_SCOPES="data:read"

# 3-legged OAuth (required for ACC/Docs workflows)
# This MUST match the callback URL configured in your APS app settings.
APS_CALLBACK_URL="http://127.0.0.1:3001/aps/oauth/callback"

# Scopes requested during 3-legged OAuth (space or comma separated)
APS_OAUTH_SCOPES="data:read viewables:read"

# CORS origins allowed to call status/token endpoints with cookies
APS_CORS_ORIGINS="http://localhost:5173,http://127.0.0.1:5173"

# Central store for sessions/tokens (demo-ready)
# - If REDIS_URL is set, the service defaults to Redis.
# - Otherwise it falls back to in-memory store.
APS_STORE="redis"
REDIS_URL="redis://127.0.0.1:6379"
APS_SESSION_TTL_SECONDS="86400"

# OSS/Model Derivative defaults (2-legged)
APS_BUCKET_KEY="smartbim-demo-bucket"
APS_OSS_REGION="US"

# Service port
APS_SERVICE_PORT="3001"

# Frontend hosting (so http://127.0.0.1:3001 is the entrypoint)
# - proxy: forward all non-API routes to the Vite dev server (recommended for dev)
# - static: serve built files from pointcloud-frontend/dist (recommended for production/demo)
FRONTEND_MODE="proxy"
FRONTEND_DEV_URL="http://localhost:5173"

# Used when FRONTEND_MODE=static
FRONTEND_DIST_DIR="../../pointcloud-frontend/dist"
